<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.matt2393.sigrutfni.LoginActivity">


    <TextView
        android:id="@+id/titulo_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sig Rut Fni"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/lobster"/>



    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#08000000"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/conten_login">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="24dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/user_tit_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColorHint="@color/colorPrimary">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/user_login"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textColor="#000"
                    android:inputType="textEmailAddress"
                    android:hint="@string/usuario" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="5dp"
                app:passwordToggleTint="@color/colorPrimary">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/pass_login"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textColor="#000"
                    android:inputType="textPassword"
                    android:hint="@string/password" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Ingresar"
                android:textAllCaps="false"
                android:id="@+id/sing_in"
                android:textColor="#ffffff"
                android:background="@drawable/borde_redondo"
                android:layout_marginTop="25dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Conductor"
        android:textAllCaps="false"
        android:id="@+id/sing_in_cond"
        android:textColor="#ffffff"
        android:background="@drawable/borde_redondo"
        android:layout_marginTop="45dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Universitario"
        android:textAllCaps="false"
        android:id="@+id/sing_in_univ"
        android:textColor="#ffffff"
        android:background="@drawable/borde_redondo"
        android:layout_marginTop="25dp"/>

</LinearLayout>

